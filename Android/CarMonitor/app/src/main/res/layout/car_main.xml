<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.droid.ws.MainActivity"
    xsi:schemaLocation="http://schemas.android.com/apk/res/android ">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="347dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="533dp"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <TableLayout
                android:id="@+id/LeftSideTyres"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.12">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tyresTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tyres"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="#0090ff"
                        android:textStyle="italic" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/LFtemperatureTextView"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="@string/deg_c"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="130sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/LRtemperatureTextView"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="@string/deg_c"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="130sp" />

                </TableRow>

            </TableLayout>

            <TableLayout
                android:id="@+id/RightSideTyres"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.12">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@android:style/TextAppearance.Medium" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/RFtemperatureTextView"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="@string/deg_c"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="130sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/RRtemperatureTextView"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="@string/deg_c"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="130sp" />
                </TableRow>

            </TableLayout>

            <TableLayout
                android:id="@+id/EngineParNames"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:background="#1c2326">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/engineTextView"
                        android:layout_width="128dp"
                        android:layout_height="wrap_content"
                        android:text="@string/engine"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="#0090ff"
                        android:textStyle="italic" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/voltageTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/voltageText"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/EngineValues"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:background="#1c2326">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@android:style/TextAppearance.Medium" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/sensorDataVoltagetextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="volt"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </TableLayout>

            <TableLayout
                android:id="@+id/AmbientParNames"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/ambientTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ambient"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="#0090ff"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@android:style/TextAppearance.Medium" />

                </TableRow>

                <TableRow
                    android:id="@+id/timeStampRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/timestampTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/timestamp"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

                    <TextView
                        android:id="@+id/sensorsDataReceivedTimeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hh_mm_ss"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

                </TableRow>

                <TableRow
                    android:id="@+id/OutdoorTempRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/outdoor_temp"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

                    <TextView
                        android:id="@+id/ambientTemperatureTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/outdoor_temp"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp" />

                </TableRow>

                <TableRow
                    android:id="@+id/wifiSSIDRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wifiSSIDText"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

                    <TextView
                        android:id="@+id/wifiSSIDTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wifiSSIDText"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault" />

                </TableRow>

                <TableRow
                    android:id="@+id/SampleTimeRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/sampleTimeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sampleTimeText"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

                    <EditText
                        android:id="@+id/sampleTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="ms"
                        android:inputType="number"
                        android:text="@string/sampleTimeInt"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />
                </TableRow>

                <TableRow
                    android:id="@+id/SleepTimeRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/sensorSleepTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sleepTimeText"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

                    <EditText
                        android:id="@+id/sensorSleepTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="sec"
                        android:inputType="number"
                        android:text="@string/sleepTimeInt"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/tempConvertAlphaTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tempConvertAlphaText"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

                    <EditText
                        android:id="@+id/tempConvertAlpha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="sec"
                        android:inputType="number"
                        android:text="@string/tempConvertAlphaFloat"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/tempConvertBetaTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tempConvertBetaText"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

                    <EditText
                        android:id="@+id/tempConvertBeta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="sec"
                        android:inputType="number"
                        android:text="@string/tempConvertBetaFloat"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

                </TableRow>

            </TableLayout>

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.01">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:weightSum="100">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/raceOnOffButton"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:text="@string/raceOnOff"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textOff="@string/raceOff"
                android:textOn="@string/raceOn" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="100" />

            <Button
                android:id="@+id/exitButton"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="EXIT"
                android:textAppearance="@android:style/TextAppearance.Large" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
